pipeline {
    agent any

    stages {
        stage('Install frontend dependencies') {
            steps {
                dir('piBackEnd') {
                    sh 'npm install'
                }
            }
        }

        stage('Unit Test') {
    steps {
        dir('piBackEnd') {
            script {
                try {
                    sh 'npm test'
                } catch (err) {
                    echo "Tests skipped (no tests defined yet)"
                }
            }
        }
    }
}


        stage('Build backend') {
            steps {
                dir('piBackEnd') {
                    sh 'npm run build-dev'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('piBackEnd') {
                    script {
                        def scannerHome = tool 'scanner'
                        withSonarQubeEnv {
                            sh "${scannerHome}/bin/sonar-scanner"
                        }
                    }
                }
            }
        }
    }
}
